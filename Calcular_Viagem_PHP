<?php
    echo "Digite a distância da viagem (km): ";
    $distancia= (float) readline();
    
    echo "Digite o consumo do seu veículo (km/l): ";
    $consumo= (float) readline();
    
    echo "Digite o valor do litro do combustível: ";
    $valor= (float) readline();
    
    $quantLitros = $distancia / $consumo;
    $totalViagem = $quantLitros * $valor;
    $quantLitros = round($quantLitros, 2);
    $totalViagem = round($totalViagem, 2);
    
     echo "A quantidade de litros gastos para a sua viagem será de: ".$quantLitros." litros. \n";  
     echo "O valor total gasto para sua viagem será de: R$ ".$totalViagem.".";  
?>
